{
    "compileOnSave": false,
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "jsx": "preserve",
        "module": "es6",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "target": "es6"
    },
    "exclude": [
        "node_modules/**/*"
    ]
}